<?php
	/** @var $this \MvcCore\Ext\Controllers\DataGrids\View */
	/** @var $grid \MvcCore\Ext\Controllers\DataGrid */

	$renderConf = $grid->GetConfigRendering();
	$gridType = $renderConf->GetType();
	$gridTableType = ($gridType & $grid::TYPE_TABLE) !== 0;
	$cssClasses = $grid->GetCssClasses();
	$headFiltering = $grid->GetConfigRendering()->GetRenderTableHeadFiltering();

?><div class="grid grid-type-<?php
	echo ($gridTableType ? 'table' : 'grid');
	if (count($cssClasses) > 0) echo ' '.implode(' ', $cssClasses);
?>"><?php
	if ($renderConf->GetRenderControlPaging() || $renderConf->GetRenderControlOrdering()):
	?><div class="grid-controls grid-controls-top"><?php
		$pagingCode = $this->RenderGridControlPaging();
		echo $pagingCode;
		echo $this->RenderGridControlOrdering();
	?></div><?php
	endif;
	if ($headFiltering):
		$headForm = $grid->GetTableHeadFilterForm();
		echo $headForm->RenderBegin();
	endif;
	?><table class="grid-content"><?php
		if ($gridTableType): 
			echo $this->RenderGridHeadTable();
			echo $this->RenderGridBodyTable();
		else:
			echo $this->RenderGridBodyGrid();
		endif;
	?></table><?php
	if ($headFiltering):
		echo $headForm->RenderEnd();
	endif;
	if ($renderConf->GetRenderControlPaging() || $renderConf->GetRenderControlCountScales()):
	?><div class="grid-controls grid-controls-bottom"><?php 
		if (isset($pagingCode)) echo $pagingCode;
		echo $this->RenderGridControlCountScales();
	?></div><?php
	endif;
?></div>