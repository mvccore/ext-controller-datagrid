<?php
	/** @var $this \MvcCore\Ext\Controllers\DataGrids\View */
	/** @var $grid \MvcCore\Ext\Controllers\DataGrid */
	/** @var $renderConf \MvcCore\Ext\Controllers\DataGrids\Configs\Rendering */
	$renderConf = $grid->GetConfigRendering();

	if ($renderConf->GetRenderControlOrdering())
		echo $this->RenderGridControl($renderConf->GetTemplateControlOrdering());

	if ($renderConf->GetRenderControlPaging()) {
		$pagingCode = $this->RenderGridControl($renderConf->GetTemplateControlPaging());
		echo $pagingCode;
	}

	?><table class="datagrid"><?php
	if ($renderConf->GetType() === \MvcCore\Ext\Controllers\DataGrid\IConstants::TYPE_TABLE): 
		
		if ($renderConf->GetRenderTableHeadOrdering()) 
			echo $this->RenderGridContent($renderConf->GetTemplateTableHead());
		echo $this->RenderGridContent($renderConf->GetTemplateTableBody());
		
	else:

		if ($renderConf->GetRenderTableHeadOrdering()) 
			echo $this->RenderGridContent($renderConf->GetTemplateGridHead());
		echo $this->RenderGridContent($renderConf->GetTemplateGridBody());
		
	endif;
	?></table><?php 

	if ($renderConf->GetRenderControlCountScales())
		echo $this->RenderGridControl($renderConf->GetTemplateControlCountScales());

	if ($renderConf->GetRenderControlPaging())
		echo $pagingCode;
?>
